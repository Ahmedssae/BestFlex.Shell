<Window x:Class="BestFlex.Shell.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="260" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Current password" Margin="0,0,0,4"/>
        <PasswordBox x:Name="CurrentBox" Grid.Row="1" Height="32"/>

        <TextBlock Grid.Row="2" Text="New password" Margin="0,12,0,4"/>
        <PasswordBox x:Name="NewBox" Grid.Row="3" Height="32" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <TextBlock x:Name="ErrorText" Foreground="Crimson" VerticalAlignment="Center" Margin="0,0,12,0" Visibility="Collapsed"/>
            <Button Content="Save" Width="100" Click="Save_Click" Margin="0,0,8,0"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
