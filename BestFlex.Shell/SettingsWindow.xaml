<Window x:Class="BestFlex.Shell.SettingsWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Settings" Height="520" Width="640"
        WindowStartupLocation="CenterOwner">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 0: Name -->
                <RowDefinition Height="Auto"/>
                <!-- 1: Address -->
                <RowDefinition Height="Auto"/>
                <!-- 2: Phone -->
                <RowDefinition Height="Auto"/>
                <!-- 3: Tax -->
                <RowDefinition Height="Auto"/>
                <!-- 4: Logo -->
                <RowDefinition Height="20"/>
                <!-- 5: Separator -->
                <RowDefinition Height="Auto"/>
                <!-- 6: Page size -->
                <RowDefinition Height="Auto"/>
                <!-- 7: Margin -->
                <RowDefinition Height="Auto"/>
                <!-- 8: Discount -->
                <RowDefinition Height="Auto"/>
                <!-- 9: Tax -->
                <RowDefinition Height="Auto"/>
                <!--10: Columns -->
                <RowDefinition Height="Auto"/>
                <!--11: Footer note -->
                <RowDefinition Height="Auto"/>
                <!--12: Buttons -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Company -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Company Name:" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtName" Margin="6,4"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Address:" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="txtAddress" Margin="6,4"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Phone:" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="txtPhone" Margin="6,4"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Tax No:" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="txtTax" Margin="6,4"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Logo Path:" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="txtLogo" Margin="6,4"/>
            <Button    Grid.Row="4" Grid.Column="2" Content="Browse…" Width="90" Margin="6,4" Click="Browse_Click"/>

            <!-- Spacer -->
            <Separator Grid.Row="5" Grid.ColumnSpan="3" Margin="0,8"/>

            <!-- Print template -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Page Size:" VerticalAlignment="Center"/>
            <ComboBox  Grid.Row="6" Grid.Column="1" x:Name="cmbPageSize" Margin="6,4" Width="120">
                <ComboBoxItem Content="A4"/>
                <ComboBoxItem Content="A5"/>
            </ComboBox>

            <TextBlock Grid.Row="7" Grid.Column="0" Text="Margin (pt):" VerticalAlignment="Center"/>
            <TextBox   Grid.Row="7" Grid.Column="1" x:Name="txtMargin" Margin="6,4" Width="120"/>

            <!-- Discount -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Discount:" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Margin="6,4">
                <CheckBox x:Name="chkDiscount" Content="Enable" Margin="0,0,12,0"/>
                <TextBlock Text="Percent:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="txtDiscountPct" Width="80"/>
                <TextBlock Text="%" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Tax -->
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Tax:" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Horizontal" Margin="6,4">
                <CheckBox x:Name="chkTax" Content="Enable" Margin="0,0,12,0"/>
                <TextBlock Text="Percent:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="txtTaxPct" Width="80"/>
                <TextBlock Text="%" VerticalAlignment="Center" Margin="6,0,0,0"/>
            </StackPanel>

            <!-- Columns -->
            <GroupBox Grid.Row="10" Grid.ColumnSpan="3" Header="Columns" Margin="0,8,0,0">
                <StackPanel Orientation="Horizontal" Margin="8,6,8,8">
                    <CheckBox x:Name="chkCode"      Content="Code"       Margin="0,0,12,0"/>
                    <CheckBox x:Name="chkName"      Content="Name"       Margin="0,0,12,0"/>
                    <CheckBox x:Name="chkQty"       Content="Qty"        Margin="0,0,12,0"/>
                    <CheckBox x:Name="chkPrice"     Content="Unit Price" Margin="0,0,12,0"/>
                    <CheckBox x:Name="chkLineTotal" Content="Line Total"/>
                </StackPanel>
            </GroupBox>

            <!-- Footer -->
            <TextBlock Grid.Row="11" Grid.Column="0" Text="Footer Note:" VerticalAlignment="Top" Margin="0,8,0,0"/>
            <TextBox   Grid.Row="11" x:Name="txtFooter" Margin="89,5,72,17" AcceptsReturn="True" TextWrapping="Wrap" Grid.ColumnSpan="2"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Margin="0,18,-17,15" Grid.RowSpan="2">
                <Button Content="Save"  Width="90" Margin="0,12,8,0" Click="Save_Click" Height="27"/>
                <Button Content="Close" Width="79" Margin="0,12,0,0" Click="Close_Click" Height="25"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
