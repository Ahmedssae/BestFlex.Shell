<Window x:Class="BestFlex.Shell.UI.Toasts.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True"
        SizeToContent="WidthAndHeight">
    <Border CornerRadius="10" Background="#CC111827" Padding="14" Margin="8" BorderBrush="#334B5563" BorderThickness="1">
        <TextBlock x:Name="Msg" Foreground="White" FontSize="13" TextWrapping="Wrap"/>
    </Border>
</Window>
