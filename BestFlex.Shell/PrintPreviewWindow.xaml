<Window x:Class="BestFlex.Shell.PrintPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Preview" Height="650" Width="980"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Margin="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="-" Width="36" Click="ZoomOut_Click" ToolTip="Zoom out (Ctrl + -)"/>
                <Slider x:Name="ZoomSlider"
        Width="160"
        Minimum="50"
        Maximum="300"
        Value="100"
        Margin="6,0"
        TickFrequency="25"
        IsSnapToTickEnabled="True"/>
                <TextBlock x:Name="ZoomLabel" VerticalAlignment="Center" Width="48" TextAlignment="Right"/>
                <Button Content="+" Width="36" Click="ZoomIn_Click" ToolTip="Zoom in (Ctrl + =)"/>
                <CheckBox x:Name="ChkFitWidth" Content="Fit to width" Margin="12,0,0,0"
                  Checked="ChkFitWidth_Changed" Unchecked="ChkFitWidth_Changed"/>
                <Button Content="Print" Margin="12,0,0,0" Width="100" Click="Print_Click"/>
                <Button Content="Close" Margin="6,0,0,0" Width="100" Click="Close_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Viewer -->
        <FlowDocumentScrollViewer x:Name="Viewer" Grid.Row="1" Margin="8"
                              IsSelectionEnabled="False" Zoom="100"/>
    </Grid>
</Window>
