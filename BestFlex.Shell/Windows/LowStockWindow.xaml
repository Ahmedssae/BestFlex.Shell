<Window x:Class="BestFlex.Shell.Windows.LowStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Low Stock Items" Height="520" Width="720"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="12">
            <TextBlock Text="Threshold ≤" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="txtThreshold" Width="70" VerticalContentAlignment="Center" />
            <Button Content="Refresh" Margin="8,0,0,0" Click="Refresh_Click"/>
            <TextBlock x:Name="txtSummary" VerticalAlignment="Center" Margin="16,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="grid" Margin="12" AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True" RowHeight="34" HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal" AlternatingRowBackground="#FAFAFA">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="120"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding StockQty}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
