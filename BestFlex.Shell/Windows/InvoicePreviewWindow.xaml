<Window x:Class="BestFlex.Shell.Windows.InvoicePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice Preview" Width="820" Height="640"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Print" Click="Print_Click"/>
            <Separator/>
            <TextBlock Text="Invoice:" Margin="8,0,4,0" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtHeader" VerticalAlignment="Center" FontWeight="SemiBold"/>
        </ToolBar>

        <FlowDocumentScrollViewer x:Name="viewer" />
    </DockPanel>
</Window>
