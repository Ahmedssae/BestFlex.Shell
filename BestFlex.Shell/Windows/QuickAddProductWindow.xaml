<Window x:Class="BestFlex.Shell.Windows.QuickAddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Border Padding="16" Background="{DynamicResource Brush.Background}">
        <Grid Width="420">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Code -->
            <DockPanel Grid.Row="0" LastChildFill="True">
                <TextBlock Text="Code" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCode" Margin="8,0,0,0" Height="28" VerticalContentAlignment="Center"
                         ToolTip="Unique product code (required)"/>
            </DockPanel>

            <!-- Name -->
            <DockPanel Grid.Row="2" LastChildFill="True">
                <TextBlock Text="Name" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Margin="8,0,0,0" Height="28" VerticalContentAlignment="Center"
                         ToolTip="Product name (required)"/>
            </DockPanel>

            <!-- Default Price (optional) -->
            <DockPanel Grid.Row="4" LastChildFill="True">
                <TextBlock Text="Default Price" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Margin="8,0,0,0" Height="28" VerticalContentAlignment="Center"
                         ToolTip="Optional – used to prefill line price"/>
            </DockPanel>

            <!-- Actions -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Width="90" Margin="0,0,8,0" IsCancel="True"/>
                <Button Content="Save" Width="110" IsDefault="True" Click="Save_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
