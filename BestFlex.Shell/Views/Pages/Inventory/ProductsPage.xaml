<UserControl x:Class="BestFlex.Shell.Views.Pages.Inventory.ProductsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header / Filters / Actions -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <TextBlock Text="Products" FontSize="20" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Code" Margin="16,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCode" Width="140" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Name" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtName" Width="200" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Stock ≥" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStockMin" Width="70" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Stock ≤" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtStockMax" Width="70" VerticalContentAlignment="Center"/>

                    <Button Content="Search" Margin="12,0,0,0" Click="BtnSearch_Click"/>
                    <Button Content="Clear" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnClear_Click"/>

                    <Separator Margin="10,0" Width="1" VerticalAlignment="Stretch"/>

                    <Button Content="Add Product" Margin="10,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnAddProduct_Click"/>
                    <Button Content="Export CSV" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnExportCsv_Click"/>
                    <Button Content="Print / PDF" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnPrint_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Grid -->
            <DataGrid Grid.Row="2" x:Name="grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      RowHeight="34" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#FAFAFA" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="150"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Stock" Binding="{Binding StockQty}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer / Paging -->
            <DockPanel Grid.Row="4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="◀ Prev" Click="BtnPrev_Click" Style="{StaticResource BtnSecondary}" Margin="0,0,6,0"/>
                    <Button Content="Next ▶" Click="BtnNext_Click" Style="{StaticResource BtnSecondary}" />
                    <TextBlock x:Name="txtRange" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Page size" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="cmbPageSize" Width="90" SelectionChanged="cmbPageSize_SelectionChanged">
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </StackPanel>
            </DockPanel>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid x:Name="overlay" Background="#80000000" Visibility="Collapsed" IsHitTestVisible="True">
            <Border Width="300" Height="120" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Margin="16" VerticalAlignment="Center">
                    <TextBlock Text="Loading..." FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Height="6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
