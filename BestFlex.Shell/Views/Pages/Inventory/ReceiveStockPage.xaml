<UserControl x:Class="BestFlex.Shell.Views.Pages.Inventory.ReceiveStockPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="720" d:DesignWidth="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource Brush.Surface.Muted}" Padding="12"
                BorderBrush="{DynamicResource Brush.Border}" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Receive Stock (GRN)" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="btnNew" Content="New (Ctrl+N)" Margin="6,0" Padding="10,6"/>
                    <Button x:Name="btnSave" Content="Save (Ctrl+S)" Margin="6,0" Padding="10,6"/>
                    <Button x:Name="btnPrint" Content="Print" Margin="6,0" Padding="10,6" IsEnabled="False"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="12">
                <UniformGrid Columns="4" Rows="2" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Supplier" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtSupplier"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Document No" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtDocNo"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Date" Margin="0,0,0,4"/>
                        <DatePicker x:Name="dpDate"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Notes" Margin="0,0,0,4"/>
                        <TextBox x:Name="txtNotes"/>
                    </StackPanel>
                </UniformGrid>

                <DataGrid x:Name="grid" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" Margin="0,8,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code, UpdateSourceTrigger=PropertyChanged}" Width="160"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, StringFormat=0.###}" Width="100"/>
                        <DataGridTextColumn Header="Unit Cost" Binding="{Binding UnitCost, UpdateSourceTrigger=PropertyChanged, StringFormat=0.###}" Width="120"/>
                        <DataGridTextColumn Header="Line Total" Binding="{Binding LineTotal, StringFormat=0.###}" IsReadOnly="True" Width="140"/>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" Padding="8,4" Click="RemoveLine_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Button x:Name="btnAddRow" Content="Add Line (Ins)" Padding="10,6"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource Brush.Surface.Muted}" Padding="12"
                BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1,1,1,0">
            <DockPanel>
                <TextBlock x:Name="txtSummary" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="Grand Total: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtGrand" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
