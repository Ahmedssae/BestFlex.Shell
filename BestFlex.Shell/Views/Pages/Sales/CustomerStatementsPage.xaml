<UserControl x:Class="BestFlex.Shell.Pages.CustomerStatementsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">

    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <DockPanel Grid.Row="0">
                <TextBlock Text="Customer Statements" FontSize="20" FontWeight="SemiBold"/>
            </DockPanel>

            <!-- Filters -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="310"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Customer -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Customer" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbCustomer" Width="300" Margin="8,0,0,0"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                    <Button Content="Add" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnAddCustomer_Click"/>
                </StackPanel>

                <!-- From -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="From" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpFrom" Width="160" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- To -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="To" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpTo" Width="160" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button Content="Load" Width="90" Click="BtnLoad_Click"/>
                    <Button Content="Clear" Width="90" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnClear_Click"/>
                </StackPanel>
            </Grid>

            <!-- Grid -->
            <DataGrid Grid.Row="4" x:Name="grid" AutoGenerateColumns="False" CanUserAddRows="False"
                      IsReadOnly="True" RowHeight="34" HeadersVisibility="Column"
                      AlternatingRowBackground="#FAFAFA" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date"  Binding="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" Width="150"/>
                    <DataGridTextColumn Header="Doc No" Binding="{Binding DocNo}" Width="170"/>
                    <DataGridTextColumn Header="Type"  Binding="{Binding Type}" Width="160"/>
                    <DataGridTextColumn Header="Debit" Binding="{Binding Debit, StringFormat={}{0:N2}}" Width="140"/>
                    <DataGridTextColumn Header="Credit" Binding="{Binding Credit, StringFormat={}{0:N2}}" Width="140"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat={}{0:N2}}" Width="160"/>
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer -->
            <DockPanel Grid.Row="6">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total Debit:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalDebit" FontWeight="SemiBold" Margin="0,0,16,0"/>
                    <TextBlock Text="Total Credit:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalCredit" FontWeight="SemiBold" Margin="0,0,16,0"/>
                    <TextBlock Text="Closing Balance:" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtClosing" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="Export CSV" Margin="0,0,6,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnExport_Click"/>
                    <Button Content="Print / PDF" Click="BtnPrint_Click" Style="{StaticResource BtnSecondary}"/>
                </StackPanel>
            </DockPanel>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid x:Name="overlay" Background="#66000000" Visibility="Collapsed" IsHitTestVisible="True">
            <Border Width="280" Height="110" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Margin="16" VerticalAlignment="Center">
                    <TextBlock Text="Loading..." FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Height="6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
