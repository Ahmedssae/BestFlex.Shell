<Window x:Class="BestFlex.Shell.NewSaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Sale" Height="480" Width="720" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBlock Text="Customer:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="220" ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBox Width="260"
         Text="{Binding ProductInput, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text=" Qty:" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <TextBox Width="60" Text="{Binding Qty}" />
            <Button Content="Add Line" Margin="12,0,0,0" Click="AddLine_Click"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Lines}" AutoGenerateColumns="False" Width="461">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding ProductCode}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="80"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" Width="100" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Close" Width="100" Click="Close_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
