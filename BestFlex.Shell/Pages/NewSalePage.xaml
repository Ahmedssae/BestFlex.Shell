<UserControl x:Class="BestFlex.Shell.Pages.NewSalePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0">
                <TextBlock Text="New Sale" FontSize="20" FontWeight="SemiBold"/>
            </DockPanel>

            <!-- Customer + Currency row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Customer" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbCustomer" Width="320" Margin="8,0,0,0"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                    <Button Content="Add" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnAddCustomer_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Currency" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbCurrency" Width="120" Margin="8,0,0,0">
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Date" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpDate" Width="160" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Lines grid -->
            <DataGrid Grid.Row="4" x:Name="grid" AutoGenerateColumns="False" CanUserAddRows="False"
                      RowHeight="34" HeadersVisibility="Column" GridLinesVisibility="None"
                      ItemsSource="{Binding Lines}" IsReadOnly="False"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <!-- Product -->
                    <DataGridTemplateColumn Header="Product" MinWidth="280" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True">
                                    <ComboBox Width="260"
                                              ItemsSource="{Binding DataContext.Products, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedValue="{Binding ProductId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Id"
                                              DisplayMemberPath="Display"
                                              IsEditable="True"/>
                                    <TextBlock Text="{Binding StockText}" Foreground="#666" Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Qty -->
                    <DataGridTextColumn Header="Qty" Binding="{Binding Qty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" Width="100"/>

                    <!-- Unit Price -->
                    <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" Width="110"/>

                    <!-- Line Total -->
                    <DataGridTextColumn Header="Total" IsReadOnly="True"
                                        Binding="{Binding LineTotal, StringFormat={}{0:N2}}" Width="120"/>
                    <!-- Remove -->
                    <DataGridTemplateColumn Header="" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Del" Click="BtnRemoveLine_Click" Style="{StaticResource BtnSecondary}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer: add line + totals + save -->
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Add Line" Click="BtnAddLine_Click"/>
                    <Button Content="Add Product" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnAddProduct_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="SubTotal:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtSubTotal" FontWeight="SemiBold" Margin="0,0,16,0"/>
                    <TextBlock Text="Items:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtItems" Margin="0,0,16,0"/>
                    <Button Content="Save" Click="BtnSave_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid x:Name="overlay" Background="#66000000" Visibility="Collapsed" IsHitTestVisible="True">
            <Border Width="280" Height="110" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Margin="16" VerticalAlignment="Center">
                    <TextBlock Text="Working..." FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Height="6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
