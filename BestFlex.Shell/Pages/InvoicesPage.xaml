<UserControl x:Class="BestFlex.Shell.Pages.InvoicesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">
    <Grid>
        <!-- CONTENT -->
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header + filters + actions -->
            <DockPanel Grid.Row="0" LastChildFill="False">
                <TextBlock Text="Invoices" FontSize="20" FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Number" Margin="16,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNumber" Width="120" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Customer" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCustomer" Width="160" VerticalContentAlignment="Center"/>
                    <Button Content="Add Customer" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}"
                            Click="BtnAddCustomer_Click"/>

                    <TextBlock Text="From" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpFrom" Width="130"/>

                    <TextBlock Text="To" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpTo" Width="130"/>

                    <Button Content="Search" Margin="12,0,0,0" Click="BtnSearch_Click"/>
                    <Button Content="Clear" Margin="6,0,0,0" Click="BtnClear_Click" Style="{StaticResource BtnSecondary}"/>
                    <Separator Margin="10,0" Width="1" VerticalAlignment="Stretch"/>

                    <Button Content="Preview" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnPreview_Click"/>
                    <Button Content="Add Product" Margin="10,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnAddProduct_Click"/>
                    <Button Content="Export CSV" Margin="10,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnExportCsv_Click"/>
                    <Button Content="Print / PDF" Margin="6,0,0,0" Style="{StaticResource BtnSecondary}" Click="BtnPrint_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- Grid -->
            <DataGrid Grid.Row="2" x:Name="grid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      RowHeight="34" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#FAFAFA" SelectionMode="Single"
                      MouseDoubleClick="grid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding InvoiceNo}" Width="160"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding IssuedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}" Width="170"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Lines" Binding="{Binding Items}" Width="100"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:N2}}" Width="150"/>
                    <DataGridTextColumn Header="Cur" Binding="{Binding Currency}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Footer / paging -->
            <DockPanel Grid.Row="4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="◀ Prev" Click="BtnPrev_Click" Style="{StaticResource BtnSecondary}" Margin="0,0,6,0"/>
                    <Button Content="Next ▶" Click="BtnNext_Click" Style="{StaticResource BtnSecondary}" />
                    <TextBlock x:Name="txtRange" Margin="12,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Page size" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="cmbPageSize" Width="90" SelectionChanged="cmbPageSize_SelectionChanged">
                        <ComboBoxItem Content="25"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </StackPanel>
            </DockPanel>
        </Grid>

        <!-- LOADING OVERLAY -->
        <Grid x:Name="overlay" Background="#80000000" Visibility="Collapsed" IsHitTestVisible="True">
            <Border Width="300" Height="120" CornerRadius="8" Background="White" BorderBrush="#DDD" BorderThickness="1">
                <StackPanel Margin="16" VerticalAlignment="Center">
                    <TextBlock Text="Loading..." FontWeight="SemiBold" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Height="6"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
