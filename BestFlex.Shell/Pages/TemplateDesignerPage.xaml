<UserControl x:Class="BestFlex.Shell.Pages.TemplateDesignerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="Preview" Padding="14,8" Margin="0,0,8,0" Click="Preview_Click"/>
                <Button Content="Save" Padding="14,8" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="Reset to Built-in" Padding="14,8" Click="Reset_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <TextBlock Text="History:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="HistoryCombo" Width="280" DisplayMemberPath="Label" SelectedValuePath="Id" Margin="0,0,6,0"/>
                <Button Content="Load" Padding="12,6" Margin="0,0,6,0" Click="LoadVersion_Click"/>
                <Button Content="Restore" Padding="12,6" Click="RestoreVersion_Click"/>
            </StackPanel>

            <CheckBox x:Name="ChkDefault" Content="Mark as default for invoices"
                VerticalAlignment="Center" Margin="12,0,0,0"/>
        </DockPanel>

        <!-- Editor -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
            <Grid>
                <TextBox x:Name="XamlEditor"
                 FontFamily="Consolas"
                 FontSize="13"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"/>
            </Grid>
        </Border>

        <!-- Spacer -->
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="Transparent"/>

        <!-- Preview -->
        <Border Grid.Row="1" Grid.Column="2" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8">
            <DocumentViewer x:Name="PreviewViewer"/>
        </Border>
    </Grid>
</UserControl>
