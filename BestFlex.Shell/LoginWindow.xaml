<Window x:Class="BestFlex.Shell.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign in"
        Height="220" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="16">

        <!-- WPF requires explicit RowDefinitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- title -->
            <RowDefinition Height="Auto"/>
            <!-- username row -->
            <RowDefinition Height="Auto"/>
            <!-- password row -->
            <RowDefinition Height="Auto"/>
            <!-- error text -->
            <RowDefinition Height="*"/>
            <!-- buttons -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Please sign in"
                   FontSize="18" FontWeight="SemiBold"
                   Margin="0,0,0,12" />

        <!-- Username row -->
        <Grid Grid.Row="1" Margin="0,4,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Username:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="UsernameBox" Grid.Column="1" MinWidth="200"/>
        </Grid>

        <!-- Password row -->
        <Grid Grid.Row="2" Margin="0,4,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Password:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <!-- PasswordBox cannot bind Password securely by default; read it in code-behind -->
            <PasswordBox x:Name="PasswordBox" Grid.Column="1" MinWidth="200"/>
        </Grid>

        <TextBlock x:Name="ErrorText"
                   Grid.Row="3"
                   Foreground="Tomato"
                   Visibility="Collapsed" />

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Login" Width="90" Margin="0,0,8,0" Click="Login_Click"/>
            <Button Content="Cancel" Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
